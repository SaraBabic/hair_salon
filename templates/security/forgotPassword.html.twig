{% extends 'base.html.twig' %}

{% block title %}I forgot my password{% endblock %}

{% block body %}
<div class="login_bg">
    <div class="w-50 mx-auto py-5">
        <form method="post" action="{{ path('app_forgot_password_send_mail') }}">
            <h2 class="mt-5 pt-5">Send us request for changing your password!</h2>
            <p class="pb-4">You will get an email with link to be able to change it!</p>
            <div class="alert alert-danger w-50 mx-auto my-3" id="alertFP" style="display: none"></div>
            <div class="form-group">
            <label for="emailForgotPass" class="form-label">Email:</label>
            <input type="email" id="emailForgotPass" name="email" class="form-control" placeholder="Enter your email...">
            </div>
                <br>
            <button type="submit" class="btn blue-button">Send!</button>
        </form>
    </div>
</div>

    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('forgotPassword') }}
    {% endblock %}

{% endblock %}